<div id="signup">

    <%= form_for(:session, url: sessions_path) do |f| %>

      <h2>Sign in</h2>

      <p>
        <%= f.label(:email, "Email:") %>
        <%= f.text_field(:email) %>
      </p>

      <p>
        <%= f.label(:password, "Password:") %>
        <%= f.password_field(:password) %>
      </p>

      <%= f.submit("Sign in") %>

    <% end %>

      <p>New user? <%= link_to "Sign up now!", new_user_path %></p>

    <% if flash[:signin_error] %>
        <div class="notice"><%= flash[:signin_error] %></div>
    <% end %>
</div>
