<!-- Sign Up-->

<!-- Render signup form partial -->
<div id="signupnew">
  <%= form_for(@user) do |f| %>
    <h2>Sign up as a new user</h2>
    <p>
      <%= f.label(:name, "Name:") %>
      <%= f.text_field(:name) %>
    </p>
    <p>
      <%= f.label(:email, "Email:") %>
      <%= f.text_field(:email) %>
    </p>
    <p>
      <%= f.label(:password, "Password:") %>
      <%= f.password_field(:password) %>
    </p>
    <p>
      <%= f.label(:password_confirmation, "Confirm password:") %>
      <%= f.password_field(:password_confirmation) %>
    </p>
    <%= f.submit("Sign up") %>
  <% end %>

  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
